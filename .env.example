# .env.example
# SteelWorks Operations Database Configuration
# Copy this file to .env and update with your database credentials

# PostgreSQL Database Connection
DB_HOST=localhost
DB_PORT=5432
DB_NAME=steelworks_ops
DB_USER=postgres
DB_PASSWORD=postgres

# For Render PostgreSQL (example):
# DB_HOST=dpg-xxxxx.render.internal
# DB_USER=steelworks_ops_user
# DB_PASSWORD=your_secure_password

# Streamlit Configuration (optional)
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_HEADLESS=true
